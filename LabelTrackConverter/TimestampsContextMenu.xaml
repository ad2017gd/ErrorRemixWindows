<ContextMenu x:Class="ERMEditor.TimestampsContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERMEditor"
                xmlns:ui="http://schemas.modernwpf.com/2019"
             Opened="ContextMenu_Opened"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContextMenu.Style>
        <Style TargetType="{x:Type ContextMenu}" BasedOn="{StaticResource DefaultContextMenuStyle}">

        </Style>
    </ContextMenu.Style>
    <MenuItem Header="Add">
        <MenuItem Header="Show window" x:Name="ShowWindow" Click="ShowWindow_Click">

        </MenuItem>
        <MenuItem Header="Hide window(s)" x:Name="HideWindow" Click="HideWindow_Click">

        </MenuItem>
    </MenuItem>
    <MenuItem Header="Delete" Visibility="{Binding ShowDelete}" Click="MenuItem_Click_1">
    </MenuItem>
</ContextMenu>
