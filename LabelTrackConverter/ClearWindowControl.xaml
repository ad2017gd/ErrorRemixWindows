<UserControl x:Class="ERWEditor.ClearWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERWEditor"
             mc:Ignorable="d" 
             
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBox
ui:ControlHelper.PlaceholderText="Window group" 
ui:ControlHelper.Header="Window group (leave empty to clear all windows)" 
Text="{Binding SelectedTimestamp.Data.Group, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </StackPanel>
</UserControl>
